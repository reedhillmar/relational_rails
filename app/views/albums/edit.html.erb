<%= form_with url: "/albums/#{@album.id}", method: :patch, data: {turbo: false} do |form| %>
  <%= form.label :title, "Album Title:" %><br>
  <%= form.text_field :title, {:value => @album.title} %><br>
  <%= form.label :number_of_songs, "Number of Songs:" %><br>
  <%= form.text_field :number_of_songs, {:value => @album.number_of_songs} %><br>
  <%= form.label :year_released, "Year Released:" %><br>
  <%= form.text_field :year_released, {:value => @album.year_released} %><br>
  <%= form.label :ep, "EP?" %><br>
  <%= form.check_box :ep, {checked: @album.ep}  %><br>
  
  <%= form.submit "Update Album"%>
<% end %>